<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.hoin.boardStudy.user.mapper.UserMapper">

    <resultMap id="userMap" type="user">
        <result column="user_id" property="userId"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="reg_date" property="regDate"/>
        <result column="withd_date" property="withdDate"/>
        <result column="upd_date" property="updDate"/>
    </resultMap>

    <insert id="saveUser" parameterType="user">
        INSERT INTO TBL_USER
        (user_id, password, email, reg_date, withd_date, upd_date)
        VALUES(#{userId}, #{password}, #{email}, sysdate(), null, sysdate());
    </insert>


    <select id="login" resultMap="userMap">
        SELECT *
        FROM TBL_USER
        WHERE user_id = #{userId}
    </select>

</mapper>